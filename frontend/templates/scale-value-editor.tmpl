<div class="scale-value">
    <button type="button" class="btn order-up"><i class="icon-arrow-up"></i></button>
    <button type="button" class="btn order-down"><i class="icon-arrow-down"></i></button>
    <input type="text" class="input-small scale-value-name" value="{{name}}" />
    <input type="text" class="input-small scale-value-value" placeholder="{{t "scale editor.values.value.placeholder"}}" value="{{value}}" />
    <button type="button" class="btn delete-scale-value"><i class="icon-remove"></i></button>
</div>
